<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="H5容器"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_online"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="在线页面"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_enable_verify"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="开启离线包验签"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_preset_offline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="预置离线包"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_offline"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="离线包"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_plugin_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="@string/title_plugin_register"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_customized_config"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/h5_default_titlebar_color"
        android:text="其他自定义设置"
        android:textColor="@android:color/white" />

</LinearLayout>